FROM python:3.8-alpine3.11

RUN apk update \
	&& apk add bash \
	&& apk add postgresql-dev gcc python3-dev musl-dev

CMD mkdir /client_portal
WORKDIR /client_portal

COPY requirements.txt requirements.txt
RUN python -m pip install -r requirements.txt

COPY reporting_tool/reporting_tool reporting_tool
COPY reporting_tool/manage.py manage.py
COPY docker/check_db_readiness.sh check_db_readiness.sh
COPY docker/run_django_server.sh run_django_server.sh

EXPOSE 8000

ENTRYPOINT ["sh", "run_django_server.sh"]